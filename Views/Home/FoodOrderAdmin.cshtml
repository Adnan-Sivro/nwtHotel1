                    .CX span {
                        font-family: fantasy;
                        font-size: 15px;
                        display: block;
                        width: 100%;
                        cursor: pointer;
                        text-align: center;
                    }
            </style>
            <h1 style="color: white;font-size: 26px;">Food Orders: </h1>
            <div ng-controller="OrderedFoodController">
                <table class="tableData" border="0" cellspacing="0" cellpadding="0">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Order Name</th>
                            <th>Order Date</th>
                            <th>Price</th>

                        </tr>
                    </thead>
                    <tbody ng-repeat="O in OrderedFood">
                        <tr ng-class-even="'even'" ng-class-odd="'odd'">
                            <td class="CX"><span>+</span></td>
                            <td>{{O.order_name}}</td>
                            <td>{{O.oder_date}}</td>
                            <td>{{O.order_price}}</td>

                        </tr>

                    </tbody>
                </table>
            </div>
            <script>
                $(function () {
                    $('banner').on('click', '.CX span', function () {
                        //When Click On + sign
                        if ($(this).text() == '+') {
                            $(this).text('-');
                        }
                        else {
                            $(this).text('+');
                        }
                        $(this).closest('tr') // row of + sign
                        .next('tr') // next row of + sign
                        .toggle(); // if show then hide else show

                    });
                });
            </script>


