                        </div>
                        <div ng-controller="ReservationController">
                            <div class="grid2">
                                <h4>Book a Room</h4>
                                <div class="booking">
                                    <form action="#" id="reservation-form" novalidate name="f1" ng-submit="SaveData(Reservation)">
                                        <div style="color:red">{{message}}</div>
                                        <fieldset>
                                            <div class="field">
                                                <h5>Reservation Information:</h5>
                                                <label>Check In</label>
                                                <input type="date" name="checkin" ng-model="Reservation.From_Date" ng-class="submitted?'ng-dirty':''" required autofocus >
                                                <span class="error" ng-show="(f1.From_Date.$dirty || Submitted) && f1.From_Date.$error.required">Date required</span>


                                            </div>
                                            <div class="field">
                                                <label>Check Out</label>
                                                <input type="date" name="checkout" ng-model="Reservation.To_Date" ng-class="submitted?'ng-dirty':''" required autofocus >
                                                <span class="error" ng-show="(f1.To_Date.$dirty || Submitted) && f1.To_Date.$error.required">Date required</span>
                                            </div>
                                            <div class="field">
                                                Persons:
                                                <input type="text" value="1">
                                                &nbsp; &nbsp;  Rooms:&nbsp;
                                                <input type="text" value="1">
                                            </div>
                                            <div class="field">
                                                <label>Type of Room</label>
                                                <select class="select1" ng-model="Reservation.Type">
                                                    <option value="0">Tip1</option>
                                                    <option value="1">Tip2</option>
                                                    <option value="2">Tip3</option>
                                                    <option value="3">Tip4</option>
                                                </select>
                                                <span class="error" ng-show="(f1.Type.$dirty || Submitted) && f1.Type.$error.required">Date required</span>
                                            </div>
                                            <div class="button">
                                                <input class="button" type="submit" value="{{submitText}}"  />
                                            </div>
                                        </fieldset>
                                    </form>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
