     <link href="~/Content/assets/css/pages/login-soft.css" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL STYLES -->
    <link rel="shortcut icon" href="favicon.ico" />
</head>
            <h2>Hotel NWTLogin Page</h2>
 
<body class="login">
    
    <div class="logo">
        <img src="~/Content/assets/img/hotel-logo.png" />
            </div>


    <div ng-controller="Login3Controller">
        <div class="content">
        <form class="form-vertical login-form" novalidate name="f1" ng-submit="Login()">
            <div style="color:rgb(142,2,2)">{{Message}}</div>
            
                <h3 class="form-title">@HotelNWT.Resource.LOGINTO</h3>
                <div class="alert alert-error hide" ng-show="!IsLogedIn">
                    <button class="close" data-dismiss="alert"></button>
                    <span>@HotelNWT.Resource.ENTERANYUSERNAME</span>
                </div>
                <div class="control-group">
                    <label class="control-label visible-ie8 visible-ie9">@HotelNWT.Resource.USERNAME</label>
                    <div class="controls">
                        <div class="input-icon left">
                            <i class="icon-user"></i>

                            <input class="m-warp placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" ng-model="LoginData.Username" name="cUsername" ng-class="Submitted?'ng-dirty':''" required autofocus />
                            <span class="error" ng-show="(f1.cUsername.$dirty || Submitted) && f1.cUsername.$error.required">@HotelNWT.Resource.USERNAMEREQ</span>

                        <!-- ng-show="(f1.cUsername.$dirty || Submitted) && f1.cUsername.$error.required" Means I want to show this span only when
        the control cUsername is invalid-->
                        </div>
                        </div>
                    </div>
                
            <div class="control-group">
                <label class="control-label visible-ie8 visible-ie9">@HotelNWT.Resource.PASSWORD</label>
                <div class="controls">
                    <div class="input-icon left">
                        <i class="icon-lock"></i>
                        <input class="m-warp placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" ng-model="LoginData.Password" name="cPassword" ng-class="Submitted?'ng-dirty':''" required autofocus />
                        <span class="error" ng-show="(f1.cPassword.$dirty || Submitted) && f1.cPassword.$error.required">@HotelNWT.Resource.PASSWORD</span>
                        </div>
                    </div>
                </div>

            <div class="form-actions">
                <label class="checkbox">
                    <input type="checkbox" name="remember" value="1" /> @HotelNWT.Resource.REMEMBER
                </label>
                 <button type="submit" class="btn blue pull-right"  value="Login">
                 Login <i class="m-icon-swapright m-icon-white"></i> 
                 </button>
            </div>
            <div class="create-account">
                <p>
                    @HotelNWT.Resource.DONTHAVEACC ?&nbsp;
                    <a href="/home/registration" id="register-btn">@HotelNWT.Resource.CREATEACC</a>
                </p>
            </div>
        </form>
            </div>
        </div>

    
    <script src="~/Content/assets/plugins/jquery-1.10.1.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery-migrate-1.2.1.min.js" type="text/javascript"></script>
    <!-- IMPORTANT! Load jquery-ui-1.10.1.custom.min.js before bootstrap.min.js to fix bootstrap tooltip conflict with jquery ui tooltip -->
    <script src="~/Content/assets/plugins/jquery-ui/jquery-ui-1.10.1.custom.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/bootstrap-hover-dropdown/twitter-bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
    <!--[if lt IE 9]>
    <script src="assets/plugins/excanvas.min.js"></script>
