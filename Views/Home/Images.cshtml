@model IEnumerable<HotelNWT.image>

<head>
    <title>Images</title>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/bxslider/4.1.1/jquery.bxslider.css">
    <script type="text/javascript" src="//cdn.jsdelivr.net/bxslider/4.1.1/jquery.bxslider.js"></script>

    <script type="text/javascript">
        (function ($) {
            jQuery(document).ready(function ($) {
                $('.bxslider').bxSlider({
                    mode: 'fade',
                    auto: true,
                    captions: true
                });
            });
        })(jQuery);

        function AddNewImage()
    {
            var booksDiv = $("#formaddednewimage");
        $.ajax({
            type: 'POST',
            url: '/Data/AddImage',
            success: function (data) {
                booksDiv.html("");
                booksDiv.html(data);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    }

    </script>
</head>


